<%- include('../partials/header') %>

<h1> Edit Workout Name / Date </h1>
<form action="/workouts/<%=workout.id%>?_method=PUT" class="form" method="POST">
  <div class="insert-page">
    Workout Name: <input type="text" name="title" class="input-workout" value="<%=workout.title%>">
  </div>
  <div class="insert-page">
    Date: <input required type="date" name="date" class="input-workout" value="<%= workout.date.toISOString().substring(0,10) %>">
  </div> <br>
  <div class="update-button">
    <input type="submit">
  </div>
  </div>
</form>

</body>
</html>

