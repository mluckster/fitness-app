<!DOCTYPE html>
<html>
  <head>
    <title> <%= workout.title %> </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1> show workout page </h1>
    <br>
    <div><%= workout.date %></div>
    <br> 
    <div><%= workout.id %></div>
    <br> <br>
    <% workout.exercise.forEach(exercise => { %>
      <div>Exercise: <%= exercise.name %> </div>
      <div>No of Sets: <%= exercise.sets %> </div>
      <div>No of Reps: <%= exercise.reps %> </div>
      <div>Note: <%= exercise.note %> </div>
      <div>ExerciseID: <%= exercise._id %> </div>
      <div>workoutID: <%= workout.id %> </div>
      <form action="/workouts/<%= workout.id %>/exercises/<%=exercise.id%>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE THIS">
      </form>
      <form action="/workouts/<%= workout.id %>/exercises/<%=exercise.id%>/edit" method="GET">
        <input type="submit" value="EDIT">
      </form>
        <br> <br>
        <% }) %>
    <br> <br>
    <a href="/workouts/<%=workout.id%>/exercises/new">Add Exercise</a>
  </body>
</html>
