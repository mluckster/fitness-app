<!DOCTYPE html>
<html>
  <head>
    <title> <%= title %> </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1> Workout index page </h1>
    <p>Click <a href="/workouts/new">here</a> to add workout</p>
    <br> 
    <div>List of workouts below</div> <br>
    <% workouts.forEach(workout => { %>
      Name: <%= workout.title %>
      <br>
      <%= workout.date %>
      <br>
      <%= workout._id %>
      <br>
      <a href="/workouts/<%=workout.id%>">Workout Details</a> <br> 
      <form action="/workouts/<%= workout.id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE">
      </form> <br>
      <form action="/workouts/<%= workout.id %>/edit" method="GET">
        <input type="submit" value="EDIT NAME / DATE">
      </form> 
      <br> <br>
    <% }) %> 
  </body>
</html>
